<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.base.yun.mytestapp.viewmodel.EventViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_profile"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txt_event_type"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/txt_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@{model.eventType}"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintLeft_toRightOf="@+id/img_profile"
                app:layout_constraintRight_toLeftOf="@+id/txt_repo_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_repo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.repoName}"
                android:textColor="@color/colorAccent"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_event_type"
                app:layout_constraintLeft_toRightOf="@+id/txt_event_type"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#efefef"
                app:layout_constraintBottom_toTopOf="@+id/txt_commit_count"
                app:layout_constraintLeft_toRightOf="@+id/txt_event_type"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_event_type" />

            <TextView
                android:id="@+id/txt_commit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@{@string/commit_count(model.commitCount)}"
                app:layout_constraintBottom_toTopOf="@+id/txt_commit_message"
                app:layout_constraintLeft_toLeftOf="@+id/txt_event_type"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="@string/commit_count" />

            <TextView
                android:id="@+id/txt_commit_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{model.commitData.isEmpty() ? null : model.commitData.get(0).message}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/txt_event_type"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_commit_count" />

            <android.support.constraint.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{model.commitData.isEmpty() ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="txt_commit_count, txt_commit_message, divider" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
